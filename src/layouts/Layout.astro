---
export interface Props {
  title?: string;
}

const { title = 'AniGen - Anime Image Viewer' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="A web-based anime image viewer with swipe navigation and multiple image sources" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#000000" />
  
  <!-- Apple iOS specific meta tags -->
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  <meta name="apple-mobile-web-app-title" content="AniGen" />
  <meta name="apple-touch-fullscreen" content="yes" />
  <meta name="format-detection" content="telephone=no" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- DNS prefetch and preconnect for faster image loading -->
  <link rel="dns-prefetch" href="//api.waifu.im" />
  <link rel="dns-prefetch" href="//api.waifu.pics" />
  <link rel="dns-prefetch" href="//nekos.moe" />
  <link rel="dns-prefetch" href="//nekos.best" />
  <link rel="dns-prefetch" href="//nekos.life" />
  <link rel="dns-prefetch" href="//api.purrbot.site" />
  <link rel="dns-prefetch" href="//cdn.purrbot.site" />
  <link rel="dns-prefetch" href="//api.n-sfw.com" />
  <link rel="dns-prefetch" href="//api.allorigins.win" />
  
  <link rel="preconnect" href="https://api.waifu.pics" crossorigin />
  <link rel="preconnect" href="https://nekos.best" crossorigin />
  <link rel="preconnect" href="https://nekos.life" crossorigin />
  <link rel="preconnect" href="https://api.purrbot.site" crossorigin />
  <link rel="preconnect" href="https://cdn.purrbot.site" crossorigin />
  
  <title>{title}</title>
</head>
<body>
  <slot />
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: #000000;
    color: white;
    min-height: 100vh;
    overflow: hidden;
    user-select: none;
    position: relative;
    --dynamic-bg-1: #1a1a1a;
    --dynamic-bg-2: #2a2a2a;
  }

  /* Dynamic background for cinema mode effect */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, var(--dynamic-bg-1) 0%, var(--dynamic-bg-2) 70%, #000000 100%);
    z-index: -2;
    transition: background 0.6s ease-out;
    opacity: 0.8;
  }

  body::after {
    content: '';
    position: fixed;
    top: -10%;
    left: -10%;
    width: 120%;
    height: 120%;
    background: linear-gradient(135deg, var(--dynamic-bg-1), var(--dynamic-bg-2), var(--dynamic-bg-1));
    z-index: -3;
    transition: background 0.8s ease-out;
    filter: blur(60px);
    transform: scale(1.2);
    opacity: 0.6;
  }

  .container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    max-width: 100vw;
    padding: 1rem;
    gap: 0.25rem;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .container.fullscreen {
    display: none;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    min-height: 60px;
    flex-wrap: nowrap;
    position: relative;
    z-index: 10000;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .title {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
    flex-shrink: 1;
    min-width: 0;
  }

  .source-selector {
    position: relative;
    flex-shrink: 0;
    z-index: 10001;
  }

  .source-button {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
    z-index: 10002;
  }

  .source-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    min-width: 150px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    z-index: 10003;
    display: none;
    margin-top: 0.5rem;
  }

  .source-dropdown.active {
    display: block;
  }

  .dropdown-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.1);
    z-index: 9999;
    display: none;
  }

  .dropdown-backdrop.active {
    display: block;
  }

  .dropdown-backdrop.active ~ * .main-content,
  .dropdown-backdrop.active ~ * .controls,
  .dropdown-backdrop.active ~ * .keyboard-hint {
    filter: blur(3px);
  }

  .container.dropdown-active .main-content,
  .container.dropdown-active .controls,
  .container.dropdown-active .keyboard-hint {
    filter: blur(3px);
  }

  .source-option {
    padding: 0.75rem 1rem;
    color: #333;
    cursor: pointer;
    transition: background 0.2s ease;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .source-option:last-child {
    border-bottom: none;
  }

  .source-option:hover {
    background: rgba(0, 0, 0, 0.1);
  }

  .source-option.active {
    background: rgba(102, 126, 234, 0.2);
    font-weight: bold;
  }

.main-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  min-height: 0;
}

  .main-content.fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
    background: #000000;
  }

.image-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: calc(100vh - 160px);
  position: relative;
  overflow: visible;
  margin: 0.5rem 0;
}

  .image-container.fullscreen {
    max-width: 100vw;
    max-height: 100vh;
  }

.main-image {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  border-radius: 20px;
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.4),
    0 0 60px rgba(255, 255, 255, 0.1),
    inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.15);
  transition: all 0.4s ease;
  display: block;
  position: relative;
  
  /* Better scaling for small/pixelated images */
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
  image-rendering: pixelated;
}

  .main-image.fullscreen {
    border-radius: 0;
    max-width: 100vw;
    max-height: 100vh;
    box-shadow: none;
    border: none;
  }

  .loading-spinner {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50px;
    height: 50px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top: 3px solid white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: translate(-50%, -50%) rotate(0deg); }
    100% { transform: translate(-50%, -50%) rotate(360deg); }
  }

  .controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 0.25rem;
  }

  .control-button {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 0.75rem;
    border-radius: 50%;
    cursor: pointer;
    transition: background 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    font-size: 1.2rem;
  }

  .control-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .control-button.primary {
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
    border: none;
  }

  .keyboard-hint {
    position: fixed;
    bottom: 1rem;
    left: 1rem;
    background: rgba(0, 0, 0, 0.7);
    padding: 0.5rem 1rem;
    border-radius: 10px;
    font-size: 0.8rem;
    opacity: 0.8;
    transition: opacity 0.6s ease, transform 0.6s ease;
    pointer-events: none;
  }

  .keyboard-hint.fullscreen {
    display: none;
  }

  .swipe-hint {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    padding: 1rem 2rem;
    border-radius: 15px;
    text-align: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .swipe-hint.show {
    opacity: 1;
  }

  .error-message {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(255, 0, 0, 0.8);
    padding: 1rem 2rem;
    border-radius: 15px;
    text-align: center;
    color: white;
    max-width: 80%;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0.5rem;
      gap: 0.5rem;
    }

    .header {
      padding: 0.4rem;
      min-height: 50px;
    }

    .title {
      font-size: 1.2rem;
    }

    .source-button {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }

    .controls {
      gap: 0.5rem;
      padding: 0.2rem;
    }

    .control-button {
      width: 45px;
      height: 45px;
      font-size: 1rem;
    }

    .keyboard-hint {
      display: none;
    }
  }

  /* Custom scrollbar for dropdown */
  .source-dropdown::-webkit-scrollbar {
    width: 6px;
  }

  .source-dropdown::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 3px;
  }

  .source-dropdown::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 3px;
  }

  .source-dropdown::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.5);
  }

  .text-gradient {
    background: linear-gradient(
      90deg,
      rgb(153, 137, 255),
      rgb(137, 247, 255)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .footer-text {
    text-align: center;
    color: #888;
    font-size: 0.75rem;
    margin-top: 0.1rem;
    line-height: 1;
  }

  .footer-text p {
    margin: 0rem 0;
  }
</style>
